{% extends 'layouts/base.html.twig' %}

{% block title 'Connexion | La Boutique' %}

{% block content %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt" title="Déconnexion"></i></a>
            </div>
        {% endif %}
        <h1 class="text-center mt-5 text-secondary">Connexion</h1>
        <br>
        <label for="inputEmail"  class="form-label"></label>
        <input type="email" value="{{ last_username }}" placeholder="Email" name="email" id="inputEmail" class="form-control text-center" autocomplete="email" required autofocus>
        <label for="inputPassword"  class="form-label"></label>
        <input type="password" placeholder="Mot De Passe" name="password" id="inputPassword" class="form-control text-center" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
        <br>
        <button class="btn btn-block btn-success text-light" type="submit">
            Valider
        </button>
        <hr>
    </form>
{% endblock %}
